<script>
    // JavaScript to ensure only one audio file is played at a time
    document.addEventListener('DOMContentLoaded', function() {
        const audios = document.querySelectorAll('.audio-control');
        console.log('Total audio elements:', audios.length); // Log total number of audio elements
        
        audios.forEach((audio, index) => {
            console.log('Audio element', index, 'initialized');
            audio.addEventListener('play', () => {
                console.log('Audio element', index, 'is playing');
                audios.forEach((otherAudio, otherIndex) => {
                    if (otherAudio !== audio) {
                        console.log('Pausing audio element', otherIndex);
                        otherAudio.pause();
                    } else {
                        console.log('This audio element', index, 'is the one currently playing.');
                    }
                });
            });
        });
    });
</script>
